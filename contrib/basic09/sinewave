PROCEDURE sinewave
    PRINT TAB(30);"SINE WAVE"
    PRINT TAB(15);"CREATIVE COMPUTING  MORRISTOWN, NEW JERSEY"
    PRINT \ PRINT \ PRINT \ PRINT \ PRINT
    REM ARKABLE PROGRAM BY DAVID AHL
    DIM B:BOOLEAN
    B=FALSE
    REM  START LONG LOOP
    FOR T=0 TO 40 STEP .25
      A=INT(26+25*SIN(T))
      PRINT TAB(A);
      IF B=FALSE THEN
        PRINT "CREATIVE"
        B=TRUE
      ELSE
        PRINT "COMPUTING"
        B=FALSE
      ENDIF
    NEXT T
    END
