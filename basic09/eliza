PROCEDURE eliza
2 REM S0REN ROUG
PRINT CHR$(12)
PRINT TAB(24); "Eliza"
PRINT TAB(18); "Creative Computing"
PRINT TAB(16); "Morristown, New Jersey"
PRINT 
PRINT 
PRINT 
REM ----- initialisation -----
DIM i$,f$,c$,s$,p$,r$:STRING[80]
DIM n1,n2,n3,x,l,c,k,t,v:INTEGER
DIM s(36),r(36),n(36):INTEGER
n1=36
n2=14
n3=112
RESTORE 2530
FOR x=1 TO n1
  READ s(x),l
  r(x)=s(x)
  n(x)=s(x)+l-1
NEXT x
PRINT "Hi! I'm Eliza. What's your problem?"
170 INPUT i$
i$=" "+i$+"  "
IF SUBSTR("SHUT",i$)<>0 THEN
  PRINT "SHUT UP..." \ END 
ENDIF 
REM Get rid of astrophes
FOR l=1 TO LEN(i$)
  WHILE MID$(i$,l,1)="'" DO 
  i$=LEFT$(i$,l-1)+RIGHT$(i$,LEN(i$)-l)
  ENDWHILE 
NEXT l
IF i$=p$ THEN
  PRINT "Please don't repeat yourself!"
  GOTO 170
ENDIF 
REM 
REM   ----FIND KEYWORD IN I$----
REM
RESTORE 
c=0
FOR k=1 TO n1
  READ k$
  IF c=0 THEN
    FOR l=1 TO LEN(i$)-LEN(k$)+1
      IF MID$(i$,l,LEN(k$))=k$ THEN 
        c=k
        t=l
        f$=k$
      ENDIF 
    NEXT l
  ENDIF
NEXT k
IF c>0 THEN 
  k=c
  l=t
  GOTO 390
ENDIF 
k=n1
GOTO 570
REM 
390 REM take right part of string and conjugate it
REM using the list of string to be swapped
REM 
RESTORE 1230
c$=" "+RIGHT$(i$,LEN(i$)-LEN(f$)-l+1)+" "
FOR x=1 TO n2/2
  READ s$,r$
  FOR l=1 TO LEN(c$)
    IF l+LEN(s$)>LEN(c$) THEN 510
    IF MID$(c$,l,LEN(s$))<>s$ THEN 510
    c$=LEFT$(c$,l-1)+r$+RIGHT$(c$,LEN(c$)-l-LEN(s$)+1)
    l=l+LEN(r$)
    GOTO 540
510 IF l+LEN(r$)>LEN(c$) THEN 540
    IF MID$(c$,l,LEN(r$))<>r$ THEN 540
    c$=LEFT$(c$,l-1)+s$+RIGHT$(c$,LEN(c$)-l-LEN(r$)+1)
    l=l+LEN(s$)
  540 NEXT l
NEXT x
IF MID$(c$,2,1)=" " THEN c$=RIGHT$(c$,LEN(c$)-1) \ REM ONLY 1 SPACE
ENDIF 

REM 
REM Now using the keyword number (k) get reply
570 REM 
RESTORE 1330
FOR x=1 TO r(k)
  READ f$
NEXT x
r(k)=r(k)+1
IF r(k)>n(k) THEN r(k)=s(k)
ENDIF 
IF RIGHT$(f$,1)<>"*" THEN PRINT f$
  p$=i$
  GOTO 170
ENDIF 
PRINT LEFT$(f$,LEN(f$)-1); c$
p$=i$
GOTO 170
REM 
REM -----Program data follows -----
REM 
REM 
1050 DATA "CAN YOU","CAN I","YOU ARE","YOURE","I DONT","I FEEL"
DATA "WHY DONT YOU","WHY CANT I","ARE YOU","I CANT","I AM","IM "
DATA "YOU ","I WANT","WHAT","HOW","WHO","WHERE","WHEN","WHY"
DATA "NAME ","CAUSE","SORRY","DREAM","HELLO","HI ","MAYBE"
DATA " NO","YOUR","ALWAYS","THINK","ALIKE","YES","FRIEND"
DATA "COMPUTER","NOKEYFOUND"
REM 
REM --- String data for conjugations ---
REM 
1230 DATA " ARE "," AM ","WERE ","WAS "," YOU "," I ","YOUR ","MY "
DATA " IVE "," YOURE "," IM "," YOURE "
DATA " ME "," YOU! "
REM 
REM --- Replies ---
REM 
